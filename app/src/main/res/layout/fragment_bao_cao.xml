<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    android:orientation="vertical"
    tools:context=".fragment.FragmentBaoCao">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_100">

        <TextView
            android:id="@+id/textBaoCao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="Báo cáo của : thứ hai"
            android:textSize="20dp" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignRight="@+id/textBaoCao"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_baseline_filter_list_24" />
    </RelativeLayout>
    <ScrollView
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_weight="1"
                android:text="0"
                />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="40dp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:text="Doanh thu"
                />
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Lợi nhuận"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray_100"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Hóa đơn"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_weight="1"
                android:text="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:text="Số hóa đơn"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Giá trị"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Tiền thuế"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_weight="1"
                android:text="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="40dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:text="Giảm giá"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Tiền bán"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Tiền vốn"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="match_parent"
                android:background="@color/gray_100"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Thanh toán"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_weight="1"
                android:text="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:text="Tiền mặt"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Ngần hàng"
                />
            <TextView
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="15dp"
                android:text="Khách hàng"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>