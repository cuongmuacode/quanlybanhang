<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_ChiTietKhachHang">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray_100"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="Thông tin cơ bản"
                android:textSize="25dp" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_baseline_person_outline_24"
                />
            <TextView
                android:id="@+id/chiTietKhachHang_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Họ tên : Lưu Mạnh Cường"
                />
            <TextView
                android:id="@+id/chiTietKhachHang_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Email: cuonghidongoc@gmail.com"
                />
            <TextView
                android:id="@+id/chiTietKhachHang_SODT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text="Số điện thoại: 0962407291"
                />
            <TextView
                android:id="@+id/chiTietKhachHang_DiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/bg_edittext"
                android:text="Địa chỉ: Hà nội"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/chiTietKhachHang_GhiChu"
                android:layout_width="match_parent"
                android:background="@drawable/bg_edittext"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="150dp"
                android:text="Ghi chú: Chào bạn anh đứng đấy từ chiều"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>
    </ScrollView>


</FrameLayout>